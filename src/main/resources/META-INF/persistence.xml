<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="pu" transaction-type="JTA">
		<class>pl.mm.election.model.User</class>
		<class>pl.mm.election.model.Street</class>
		<class>pl.mm.election.model.City</class>
		<class>pl.mm.election.model.audit.LogEntry</class>
		<properties>
			<property name="hibernate.transaction.jta.platform"
  				value="com.atomikos.icatch.jta.hibernate4.AtomikosPlatform"/>
			<property name="hibernate.transaction.factory_class"
				value="org.hibernate.transaction.CMTTransactionFactory" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>